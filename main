package grafo;

import java.io.File;
import java.io.FileReader;
import java.io.BufferedReader;

/**
 *
 * @author Daniela
 */
public class Grafo {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        String lastfile = System.getProperty("java.io.tmpdir") + "grafo.txt";
        String lastcontent = null;
        File txt = new File(lastfile);
        if(txt.exists())
        {
            lastcontent = ReadContent(txt);
        }

        principal f = new principal();
        f.setVisible(true);
        f.TextoSel.setText(lastcontent);
    }
    public static String ReadContent(File txt)
    {
        String content = "";
        String line;
        try
        {
            FileReader r = new FileReader(txt);
            BufferedReader br = new BufferedReader(r);
            while ((line = br.readLine()) != null)
            {
                content += line + "\r\n";
            }
        }
        catch(Exception ex)
        {
            content = null;
        }
        return content;
    }
}
